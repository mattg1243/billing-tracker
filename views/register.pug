extends layout 


block content 

    .container-xl.shadow-2-strong.container-xl.shadow-2-strong#loginCont(style="align-content: center;")
        form(action="register/newuser", method="post" style="font-family: 'Encode Sans', monospace;")
            div(class="mb-3") 
                label First Name 
                input(type="text", name="fname" class="form-control")
            div(class="mb-3") 
                label Last Name 
                input(type="text", name="lname" class="form-control")
            div(class="mb-3") 
                label Username
                input(type="text", name="username" class="form-control")
            div(class="mb-3") 
                label Email 
                input(type="text", name="email" class="form-control")

            div(class="mb-3") 
                label Password 
                input(type="password", name="password" class="form-control")

            div(class="mb-3") 
                input(type="submit", value="Register" class="btn btn-secondary center")

        