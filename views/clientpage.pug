extends layout 

block content 

    h1(style="font-family: 'PT Sans', sans-serif") #{client['fname'] + ' ' + client['lname']}
        h4 Balance: $ #{parseFloat(client.balance.toString()).toFixed(2)}
        
    
    if events.length == 0
    
    table.table.highlight.centered(height=200 style="table-layout: fixed;") Events
        
        if events.length == 0
            tr(height=200) 
                th(style="text-align: center;") No events logged for this client 
        else
            tr(height=50)
                th Date 
                th Type 
                th Time  
                th Amount
                
            
            each e in events 
                tr(height=50)
                    th= moment(e.date).format("MMM Do YY")
                    th= e.type
                    th= e.duration 
                    th= '$ '+ e.amount


    button.btn.btn-primary(type='button', data-toggle='modal', data-target='#exampleModal') Add Event
    

    #exampleModal.modal.fade(tabindex='-1', role='dialog', aria-labelledby='exampleModalLabel', aria-hidden='true')
        .modal-dialog(role='document')
            .modal-content
                .modal-header
                    h3#exampleModalLabel.modal-title(style="font-size: 1em;") Event Details
                    button.close(type='button', data-dismiss='modal', aria-label='Close')
                    span(aria-hidden='true') &times;
                .modal-body.text-center.mb-1
                    .md-form.mb-5(action="/client/:id/addsession" method="post")
                        label.sr-only Date 
                        input.form-control(type="date" step=0.1 name="time" placeholder="Date")
                    .md-form.mb-5 
                        .dropdown
                            button#dropdownMenuButton.btn.btn-secondary.dropdown-toggle(type='button', data-toggle='dropdown', aria-haspopup='true', aria-expanded='false') Type
                            .dropdown-menu(aria-labelledby='dropdownMenuButton')
                                a.dropdown-item(href='#meeting') 1:1 Meeting
                                a.dropdown-item(href='#meeting') 3 Way Meeting
                                a.dropdown-item(href='#meeting') 4 Way Meeting
                                a.dropdown-item(href='#meeting') 5 Way Meeting
                                a.dropdown-item(href='#meeting') 6 Way Meeting
                                .dropdown-divider
                                a.dropdown-item(href='#') Emails
                                a.dropdown-item(href='#') Intention Statement 
                                a.dropdown-item(href='#') Notes
                                a.dropdown-item(href='#') Parenting Plan 
                                a.dropdown-item(href='#') Phone Call
                                a.dropdown-item(href='#') Refund
                                a.dropdown-item(href='#') Retainer
                                a.dropdown-item(href='#') Team Meeting
                                a.dropdown-item(href='#') Travel Time                     
                    .md-form.mb-5 
                        label.sr-only Time 
                        input.form-control(type="number" step=0.1 name="time" placeholder="these will change") 
                    .md-form.mb-5 
                        label.sr-only Rate 
                        input.form-control(type="number" name="rate" placeholder="depending on type selection")
                .modal-footer.d-flex.justify-content-center 
                    .btn.btn-primary(type="submit" action="/client/:id/addsession" method="post") Create Event

